<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="004-create-portfolio-table" author="Denis">
        <createTable tableName="portfolio">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="last_updated" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="product_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="quantity" type="INT"/>

            <column name="invested_money" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>

            <column name="average_price" type="DECIMAL(19, 6)">
                <constraints nullable="false"/>
            </column>

            <column name="dividends_amount" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>